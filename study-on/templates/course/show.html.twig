{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Уроки</th>
                {% for lesson in course.lessons %}
                    <td><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">Вернутся к списку курсов</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить</a>

    {{ include('course/_delete_form.html.twig') }}
    <a href="{{ path('app_lesson_new') }}">Добавить урок</a>
{% endblock %}
